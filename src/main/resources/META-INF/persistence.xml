<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="myJpaUnit" transaction-type="RESOURCE_LOCAL">
        
        <!-- Specify the JDBC properties for the database connection -->
        <properties>
            <!-- JDBC driver -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            
            <!-- Database URL -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/hql"/>
            
            <!-- Database username -->
            <property name="javax.persistence.jdbc.user" value="root"/>
            
            <!-- Database password -->
            <property name="javax.persistence.jdbc.password" value="Shravan@616"/>
                  </properties>
        
        <!-- Entity classes (optional) -->
        <!-- <class>com.shravan.HQL.Alien</class> -->

    </persistence-unit>

</persistence>